{
  "name": "pizzeria-metashark-pwa",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "author": "RaZ Podestá - MetaShark Tech",
  "license": "UNLICENSED",
  "description": "Ecosistema de Bienestar Digital: Portal de Contenidos, Tienda y Motor de Campañas de Alta Conversión.",
  "scripts": {
    "// --- [1] FLUJO DE DESARROLLO PRINCIPAL ---": "",
    "dev": "pnpm build:i18n && next dev",
    "build": "pnpm build:i18n && next build",
    "start": "next start",
    "// --- [2] CALIDAD DE CÓDIGO Y VALIDACIÓN ---": "",
    "lint": "next lint && eslint . --ext .ts,.tsx --fix",
    "lint:css": "stylelint 'src/**/*.css' --fix",
    "format": "prettier --write .",
    "validate": "pnpm format && pnpm lint && pnpm lint:css && tsc --noEmit",
    "// --- [3] GENERACIÓN DE CÓDIGO Y ARTEFACTOS ---": "",
    "gen:icons": "tsx --tsconfig tsconfig.scripts.json scripts/generation/generate-lucide-icon-enum.ts",
    "build:i18n": "tsx --tsconfig tsconfig.scripts.json scripts/generation/build-i18n-dictionaries.ts",
    "generate": "pnpm gen:icons && pnpm build:i18n",
    "// --- [4] GESTIÓN DE BASE DE DATOS (SEEDING) ---": "",
    "db:seed": "tsx --tsconfig tsconfig.scripts.json scripts/seed.ts",
    "// --- [5] PRUEBAS DE SOFTWARE ---": "",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "// --- [6] AUTOMATIZACIÓN DE GIT HOOKS ---": "",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "**/*.ts?(x)": "() => \"tsc --noEmit\""
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.6.2",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.90.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.4.0",
    "lucide-react": "^0.545.0",
    "negotiator": "^1.0.0",
    "next": "15.5.4",
    "next-intl": "^4.3.12",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.37.0",
    "@next/eslint-plugin-next": "^15.5.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/negotiator": "^0.6.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.0",
    "tailwindcss": "^4.1.14",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
